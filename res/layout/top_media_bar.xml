<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:typeface="monospace"
	android:id="@+id/topBar" android:layout_height="wrap_content"
	android:gravity="center_horizontal">


	<com.foobnix.ui.widget.StarTab
		android:id="@+id/folderStartTab" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical"
		android:layout_width="wrap_content" android:gravity="center_horizontal" />

	<com.foobnix.ui.widget.StarTab
		android:id="@+id/onlineStartTab" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical"
		android:layout_width="wrap_content" android:gravity="center_horizontal" />
		
	<com.foobnix.ui.widget.StarTab
		android:id="@+id/lastfmStartTab" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical"
		android:layout_width="wrap_content" android:gravity="center_horizontal" />
		
	<com.foobnix.ui.widget.StarTab
		android:id="@+id/vkontakteStartTab" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical"
		android:layout_width="wrap_content" android:gravity="center_horizontal" />


</LinearLayout>