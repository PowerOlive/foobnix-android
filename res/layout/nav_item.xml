<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="fill_parent"
	android:layout_width="match_parent" android:id="@+id/navLayout">

	<TextView android:layout_height="match_parent" android:text="TextView"
		android:id="@+id/navTxtView" android:layout_width="match_parent"
		android:layout_weight="1" android:gravity="center_vertical"
		android:textSize="16sp" android:height="40px"></TextView>
		
	<LinearLayout android:layout_width="wrap_content"
		android:typeface="monospace" android:id="@+id/linearLayout1"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="center_horizontal" android:paddingLeft="2px">
		
	<TextView android:layout_height="wrap_content" android:text="MP3"
		android:textStyle="bold"
		android:id="@+id/navExt" android:layout_width="wrap_content"
		android:layout_weight="0" android:gravity="center_vertical"
		/>
	<TextView android:layout_height="wrap_content" android:text="12.3Mb"
		android:id="@+id/navSize" android:layout_width="wrap_content"
		android:layout_weight="0" android:gravity="center_vertical"
		/>
		
	</LinearLayout>	

</LinearLayout>
