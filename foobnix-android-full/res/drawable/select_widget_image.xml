<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_focused="true"
		android:drawable="@color/alpa_10" />
	<item
		android:state_pressed="true"
		android:drawable="@color/alpa_10" />
	<item>        
        <shape>
            <gradient
                android:endColor="#992449ff"
                android:startColor="#991332cf"
                android:angle="180" />
            <stroke
                android:width="3dp"
                android:color="#ffffff" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>

