<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_focused="true"
		android:drawable="@color/alpa_40">
	</item>
	<item
		android:state_pressed="true"
		android:drawable="@color/alpa_40">
	</item>
	<!-- normal state -->
	<item>
		<shape>
			<gradient
				android:endColor="#99000080"
				android:startColor="#cc000080"
				android:angle="-180" />
			<stroke
				android:width="2dp"
				android:color="#ffffff" />
			<corners
				android:radius="5dp" />
		</shape>
	</item>
</selector>

