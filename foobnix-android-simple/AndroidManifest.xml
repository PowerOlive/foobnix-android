<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:installLocation="preferExternal" package="org.foobnix.android.simple"
	android:versionCode="1" android:versionName="1.0.0">

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:name=".FoobnixFolderPlayerApplication" android:theme="@android:style/Theme.Black.NoTitleBar">

		<activity android:name=".activity.FoldersActivity" android:launchMode="singleInstance" />

		<activity android:name=".activity.PlaylistActivity" android:launchMode="singleInstance">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<service android:name=".mediaengine.MediaService" />
	</application>



</manifest>

