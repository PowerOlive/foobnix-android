<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/menuLayout"
		android:padding="2dip"
		android:layout_width="match_parent"
		android:layout_weight="0"
		android:typeface="monospace"
		android:orientation="vertical"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:typeface="monospace"
			android:id="@+id/linearLayout1"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical">


			<ImageView
				android:visibility="gone"
				android:layout_weight="0"
				android:padding="1dip"
				android:layout_margin="1dip"
				android:background="@drawable/bg_button"
				android:layout_width="wrap_content"
				android:id="@+id/playlistAdd"
				android:layout_height="wrap_content"
				android:src="@android:drawable/ic_menu_info_details" />

				
			<ImageView
				android:background="@drawable/bg_button"
				android:padding="10dip"
				android:layout_margin="2dip"
				android:id="@+id/playlist_prev"
				android:src="@android:drawable/ic_media_rew"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1" />
				
			<ImageView
				android:background="@drawable/bg_button"
				android:padding="10dip"
				android:layout_margin="2dip"
				android:id="@+id/playlist_play_pause"
				android:src="@android:drawable/ic_media_play"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1" />
				
			<ImageView
				android:background="@drawable/bg_button"
				android:padding="10dip"
				android:layout_margin="2dip"
				android:id="@+id/playlist_next"
				android:src="@android:drawable/ic_media_ff"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1" />

			<ImageView
				android:visibility="gone"
				android:layout_weight="0"
				android:padding="1dip"
				android:layout_margin="1dip"
				android:background="@drawable/bg_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@android:drawable/ic_menu_preferences"
				android:id="@+id/playlist_preferences" />



		</LinearLayout>


		<LinearLayout
			android:paddingTop="5dip"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:typeface="monospace"
			android:id="@+id/linearLayout2"
			android:layout_height="match_parent"
			android:gravity="center_vertical|center_horizontal">

			<TextView
				android:padding="1dip"
				android:text="00:00"
				android:textColor="@color/white"
				android:id="@+id/playlist_track_time"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="0"
				android:gravity="center_vertical"></TextView>
			<SeekBar
				android:id="@+id/playilst_seek"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:paddingLeft="3px"
				android:progress="0"
				android:thumb="@drawable/none"
				android:background="#00000000"
				android:paddingRight="3px"
				android:layout_weight="1"
				android:gravity="center_vertical"></SeekBar>
			<TextView
				android:textColor="@color/white"
				android:padding="1dip"
				android:text="00:00"
				android:id="@+id/playlist_track_duration"
				android:layout_width="wrap_content"
				android:layout_weight="0"
				android:layout_height="match_parent"
				android:gravity="center_vertical"></TextView>
		</LinearLayout>
	</LinearLayout>