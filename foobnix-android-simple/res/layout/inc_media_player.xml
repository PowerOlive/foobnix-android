<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menuLayout"
	android:layout_width="match_parent"
	android:layout_weight="0"
	android:typeface="monospace"
	android:orientation="vertical"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:typeface="monospace"
		android:id="@+id/linearLayout1"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical">


		<ImageView
			android:visibility="gone"
			android:layout_weight="0"
			android:padding="1dip"
			android:layout_margin="1dip"
			android:background="@drawable/bg_button"
			android:layout_width="wrap_content"
			android:id="@+id/playlistAdd"
			android:layout_height="wrap_content"
			android:src="@android:drawable/ic_menu_info_details" />


		<ImageView
			android:background="@drawable/bg_button"
			android:padding="10dip"
			android:layout_margin="2dip"
			android:id="@+id/playlist_prev"
			android:src="@android:drawable/ic_media_rew"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1" />

		<ImageView
			android:background="@drawable/bg_button"
			android:padding="10dip"
			android:layout_margin="2dip"
			android:id="@+id/playlist_play_pause"
			android:src="@android:drawable/ic_media_play"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1" />

		<ImageView
			android:background="@drawable/bg_button"
			android:padding="10dip"
			android:layout_margin="2dip"
			android:id="@+id/playlist_next"
			android:src="@android:drawable/ic_media_ff"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1" />

		<ImageView
			android:visibility="gone"
			android:layout_weight="0"
			android:padding="1dip"
			android:layout_margin="1dip"
			android:background="@drawable/bg_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@android:drawable/ic_menu_preferences"
			android:id="@+id/playlist_preferences" />

	</LinearLayout>

	<TextView
		android:textColor="@color/white"
		android:text="1-5 Madonna-Sorry"
		android:id="@+id/playlist_info_line"
		android:layout_width="match_parent"
		android:background="#0000ff"
		android:paddingLeft="5dip"
		android:paddingRight="5dip"
		android:layout_height="wrap_content"
		android:gravity="center_vertical" />

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/relativeLayout1">

		<SeekBar
			android:id="@+id/playilst_seek"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:thumb="@drawable/none"
			android:background="#00000000"
			android:gravity="center_vertical" />

		<TextView
			android:textColor="#ffffff"
			android:text="buffer:10%"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:background="#80008000"
			android:textStyle="normal"
			android:id="@+id/playlist_buffering"
			android:layout_marginLeft="5dip"
			android:layout_width="wrap_content"
			android:layout_weight="0"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"></TextView>

		<TextView
			android:background="#80008000"
			android:textColor="@color/white"
			android:text="00:00/00:00"
			android:paddingLeft="15dip"
			android:paddingRight="15dip"
			android:id="@+id/playlist_track_time"
			android:layout_width="wrap_content"
			android:layout_weight="0"
			android:textStyle="normal"
			android:textSize="14dip"
			android:layout_centerHorizontal="true"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"></TextView>

		<TextView
			android:textColor="#ffffff"
			android:text="wi-fi"
			android:background="#80008000"
			android:textStyle="normal"
			android:layout_marginLeft="10dip"
			android:id="@+id/internet"
			android:layout_width="wrap_content"
			android:layout_weight="0"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:layout_marginRight="5dip"
			android:layout_alignParentRight="true"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"></TextView>

	</RelativeLayout>
</LinearLayout>