<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:typeface="monospace"
	android:orientation="vertical"
	android:id="@+id/menuLinearLayout"
	android:background="@drawable/gradient_header"
	android:layout_height="match_parent">


	<include
		layout="@layout/top_media_bar"
		android:layout_height="wrap_content"
		android:layout_width="match_parent" />


	<LinearLayout
		android:id="@+id/linearLayout1"
		android:paddingTop="2dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">


		<TextView
			android:textColor="#ffffff"
			android:text="Folders"
			android:textStyle="bold"
			android:textSize="14dip"
			android:singleLine="true"
			android:id="@+id/fileCurrentPath"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" />


		<ImageView
			android:background="@drawable/select_image"
			android:layout_width="wrap_content"
			android:paddingLeft="15dip"
			android:paddingRight="15dip"
			android:layout_marginRight="3dip"
			android:src="@android:drawable/arrow_down_float"
			android:layout_height="match_parent"
			android:id="@+id/fileSettings"
			android:layout_weight="0" />

	</LinearLayout>


	<LinearLayout
		android:layout_weight="0"
		android:padding="5dip"
		android:id="@+id/fileSettinsLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_weight="1"
			android:text="Delete"
			android:id="@+id/fileDelete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>
		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_weight="1"
			android:text="Create"
			android:id="@+id/fileCreate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>

	</LinearLayout>

	<ListView
		android:id="@+id/listView"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:layout_width="match_parent" />


</LinearLayout>